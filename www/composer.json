{
  "name": "courtconnect/courtconnect",
  "description": "Sistema de gesti√≥n de eventos y canchas para baloncesto",
  "type": "project",
  "license": "proprietary",

  "authors": [
    {
      "name": "Juan Castro",
      "email": "castro.pazo.jc@gmail.com"
    }
  ],

  "require": {
    "php": "^8.1",
    "phpmailer/phpmailer": "^7.0"
  },

  "autoload": {
    "classmap": [
      "app/controllers/",
      "app/models/",
      "app/core/"
    ]
  },

  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  },

  "config": {
    "optimize-autoloader": true,
    "prefer-stable": true,
    "sort-packages": true
  },

  "minimum-stability": "stable",
  "prefer-stable": true,
  "require-dev": {
    "phpunit/phpunit": "^11"
  }
}
